{
    "models": {
        "denoiser": {
            "name": "SAM3DStructureFlowAdapter",
            "args": {
                "in_channels": 8,
                "out_channels": 8,
                "model_channels": 1024,
                "num_blocks": 24,
                "num_heads": 16,
                "mlp_ratio": 4,
                "patch_size": 1,
                "resolution": 16,
                "dino_model": "dinov2_vitl14",
                "use_fp16": true,
                "use_checkpoint": true 
            }
        }
    },
    "dataset": {
        "name": "SAM3DDistillDataset",
        "args": {
            "token_dir": "/playpen-shared/xianfeng/Projects/sam-3d-objects/training_gt_tokens",
            "image_dir": "/playpen-shared/xianfeng/Projects/sam-3d-objects/notebook/images/shutterstock_stylish_kidsroom_1640806567",
            "image_size": 518 
        }
    },
    "trainer": {
        "name": "SAM3DFlowMatchingTrainer",
        "args": {
            "optimizer": {
                "name": "AdamW",
                "args": {
                    "lr": 0.0001,
                    "weight_decay": 0.05,
                    "betas": [0.9, 0.95]
                }
            },
            "scheduler": {
                "name": "cosine_with_restart",
                "args": {
                    "warmup_steps": 100
                }
            },
            "max_steps": 10000,
            "i_save": 1000,
            "i_sample": 1000,
            "i_log": 10,
            
            "batch_size": 2
        }
    }
}